<%- include('partials/_header') %>

<h1>Agregar Suscriptor</h1>
<form action="/suscriptores/agregar" method="POST">
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="nombre" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>
  <div class="form-group">
    <label for="fecha_registro">Fecha de Registro:</label>
    <input type="date" class="form-control" id="fecha_registro" name="fecha_registro" required>
  </div>
  <div class="form-group">
    <label>Intereses:</label><br>
    <% intereses.forEach(interes => { %>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="interes_<%= interes.id %>" name="intereses" value="<%= interes.id %>">
        <label class="form-check-label" for="interes_<%= interes.id %>"><%= interes.descripcion %></label>
      </div>
    <% }); %>
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<%- include('partials/_footer') %>