<%- include('partials/_header') %>

<h1>Suscriptores por Rango de Fechas</h1>
<form action="/suscriptores/fecha" method="GET">
  <div class="form-group">
    <label for="fecha_inicio">Fecha de Inicio:</label>
    <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio" required>
  </div>
  <div class="form-group">
    <label for="fecha_fin">Fecha de Fin:</label>
    <input type="date" class="form-control" id="fecha_fin" name="fecha_fin" required>
  </div>
  <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<% if (suscriptores) { %>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Fecha de Registro</th>
        <th>Intereses</th>
      </tr>
    </thead>
    <tbody>
      <% suscriptores.forEach(suscriptor => { %>
        <tr>
          <td><%= suscriptor.nombre %></td>
          <td><%= suscriptor.email %></td>
          <td><%= suscriptor.fecha_registro.toLocaleDateString() %></td>
          <td>
            <ul>
              <% suscriptor.intereses.forEach(interes => { %>
                <li><%= interes.descripcion %></li>
              <% }); %>
            </ul>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>

<%- include('partials/_footer') %>